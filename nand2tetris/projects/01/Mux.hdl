/** 
 * Multiplexor:
 * if (sel == 0) out = a, else out = b
 */
CHIP Mux {
    IN a, b, sel;
    OUT out;

    PARTS:
    Not(in=sel, out=nsel);
    And(a=a, b=b, out=and1);
    And(a=a, b=nsel, out=and2);
    And(a=b, b=sel, out=and3);
    Or(a=and1, b=and2, out=or1);
    Or(a=or1, b=and3, out=out);
}